<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs Uploads</title>
    <style>
        .container{
            height:100vh;
            display: flex;
            justify-content: center;
            align-items: center;        
        }

        .content{
            width: 300px;
            height: 300px;
            border: 1px solid black;
            border-radius: 3px;
            padding: 10px 40px;
        }
    </style>
</head>
<body class="container">
    <div class="content">
        <h1>Home</h1>
        <hr>
        <nav>
            <a href="/">Home</a>
            <a href="/upload">Upload</a>
        </nav>
        <% if( files.length > 0 ){ %>
            <% files.forEach( function(item){ %>
                <a href="/download/<%= item %>"><%= item %></a> <button onclick="window.location.href='/delete/<%= item %>'">X</button> 
            <% }) %>
        <% }else{ %>
            <p>No uploads yet.</p>
        <% } %> 
    </div>
</body>
</html>