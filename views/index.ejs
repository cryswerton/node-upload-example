<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs Uploads</title>
</head>
<body class="container">
    <h1>Home</h1>
    <hr>
    <% if( files.length > 0 ){ %>
        <% files.forEach( function(item){ %>
            <div>
                <a href="/download/<%= item %>"><%= item %></a> <button onclick="window.location.href='/delete/<%= item %>'">X</button>
            </div> 
        <% }) %>
    <% }else{ %>
        <p>No uploads yet.</p>
    <% } %> 
    <hr>
    <nav>
        <a href="/">Home</a>
        <a href="/upload">Upload</a>
    </nav>
</body>
</html>