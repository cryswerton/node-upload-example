<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs Uploads</title>
    <style>
        .container{
            height:100vh;
            display: flex;
            justify-content: center;
            align-items: center;        
        }

        .content{
            width: 300px;
            height: fit-content;
            border: 1px solid black;
            border-radius: 3px;
            padding: 10px 40px;
        }
    </style>
</head>
<body class="container">
    <div class="content">
        <h1>Home</h1>
        <hr>
        <nav>
            <a href="/">Home</a>
            <a href="/upload">Upload</a>
        </nav>
        <br>
        <% if( files.length > 0 ){ %>
            <% files.forEach( function(file){ %>
                <div>
                    <div><%= file %></div>                     
                    <button onclick="deleteFile(<%= JSON.stringify(file) %>)">Delete</button>
                    <% if( file.split('.').pop() == "mp4"){ %>
                    <button onclick="window.location.href='/watch/<%= file %>'">Watch</button>
                    <% } %>
                    <button onclick="window.location.href='/download/<%= file %>'">Download</button>
                </div> 
                <br>
            <% }) %>
        <% }else{ %>
            <p>No uploads yet.</p>
        <% } %> 
    </div>
    <script>
        const deleteFile = (file) => {            
            if (confirm("Are you sure you want to delete this file?") == true) {
                window.location.href="/delete/" + file
            }
        }
    </script>
</body>
</html>